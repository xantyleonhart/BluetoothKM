<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.udc.ps1617.bluetoothkm.HelpActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/help"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/getting_started_str"
                android:id="@+id/help_1"
                android:tag="helptext_1"
                android:onClick="expandHelp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@color/white"
                android:text="@string/help_1"
                android:id="@+id/helptext_1"
                android:visibility="gone"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_to_use_str"
                android:id="@+id/help_2"
                android:tag="helptext_2"
                android:onClick="expandHelp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@color/white"
                android:text="@string/help_2"
                android:id="@+id/helptext_2"
                android:visibility="gone"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_macros_str"
                android:id="@+id/help_3"
                android:tag="helptext_3"
                android:onClick="expandHelp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@color/white"
                android:text="@string/help_3"
                android:id="@+id/helptext_3"
                android:visibility="gone"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keycodes_str"
                android:id="@+id/help_4"
                android:tag="helptext_4"
                android:onClick="expandHelp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@color/white"
                android:text="@string/help_4"
                android:id="@+id/helptext_4"
                android:visibility="gone"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sensors_str"
                android:id="@+id/help_5"
                android:tag="helptext_5"
                android:onClick="expandHelp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@color/white"
                android:text="@string/help_5"
                android:id="@+id/helptext_5"
                android:visibility="gone"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/troubleshooting_str"
                android:id="@+id/help_6"
                android:tag="helptext_6"
                android:onClick="expandHelp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@color/white"
                android:text="@string/help_6"
                android:id="@+id/helptext_6"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
