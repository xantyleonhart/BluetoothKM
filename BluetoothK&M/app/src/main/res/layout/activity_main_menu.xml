<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.udc.ps1617.bluetoothkm.MainMenuActiv"
    android:id="@+id/mainlayout"
    style="@style/AppTheme">



    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/start"
        android:id="@+id/but_start"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/help"
        android:id="@+id/but_help"
        android:layout_below="@id/but_start"
        android:layout_alignStart="@id/but_start" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/settings"
        android:id="@+id/but_settings"
        android:layout_below="@id/but_help"
        android:layout_alignStart="@id/but_start" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/exit"
        android:id="@+id/but_exit"
        android:layout_below="@id/but_settings"
        android:layout_alignStart="@id/but_start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bluetooth"
        android:id="@+id/title1_tv"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/but_start"
        android:layout_marginTop="73dp"
        android:layout_alignEnd="@+id/but_start"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Keyboard &amp; Mouse"
        android:id="@+id/title2_tv"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_below="@+id/title1_tv"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hecho por:
        Santiago Serantes Raposo
        (santiago.sraposo@udc.es)\n
        PROGRAMACION DE SISTEMAS"
        android:id="@+id/author"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title2_tv" />
</RelativeLayout>
